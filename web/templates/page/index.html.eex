<div class="section">
</div>

<%= for post <- @posts do %>
  <div class="row">
      <div class="col s12 m12 l12">
        <div class="card-panel hoverable grey lighten-4 black-text">
          <h2><%= post.title %></h2>
          <p><%= Timex.format!(post.date, "{Mshort} {D} {YYYY}") %></p>
          <p><%= post.intro %></p>
          <p class="chip"><a class="black-text" href="<%= post_path(@conn, :show, post.path) %>">Read post >></a></p>
        </div>
      </div>
    </div>
<% end %>
